<h1 align ="center"> Sign Up for Alpha Blog </h1><br />

<div align ="center">
<% if @user.errors.any? %>
<h2> The following errors prevented the article from getting created </h2>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>

<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %><br />
        <%= f.text_field :username %>
    </p>

    <p>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
    </p>

    <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    </p>

    <p> 
    <%= f.button  "Sign Up" %>
    </p>

<% end %>

<%= link_to "Back to Articles Listing", articles_path %>
</div>